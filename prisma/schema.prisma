generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Workout {
  id        Int        @id @default(autoincrement())
  name      String
  duration  Float
  exercises Exercise[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Exercise {
  id        Int     @id @default(autoincrement())
  name      String
  reps  Float
  volume Float
  workout   Workout @relation(fields: [workoutId], references: [id])
  workoutId Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

